{
  "name": "readable-readme",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action that makes REAME readable",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "test": "jest && tslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "lint": "tslint 'src/**/*.ts' '__tests__/**/*.ts' --fix",
    "docs": "typedoc --readme ./src/README.md --out ./docs/api ./src",
    "start": "ts-node ./src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tianhaoz95/readable-readme.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "JacksonZ",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/github": "^2.0.0",
    "filewtf": "^1.0.0",
    "micromatch": "^4.0.2",
    "mustache": "^3.2.0",
    "nock": "^11.3.4",
    "write-good": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.1",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.6",
    "typescript": "^3.5.1",
    "vscode-ripgrep": "^1.5.7"
  },
  "jest": {
    "verbose": true
  }
}
