{
  "name": "readable-readme",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action that makes REAME readable",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "test": "jest && tslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "format": "tslint 'src/*.ts' 'src/**/*.ts' '__tests__/**/*.ts' '__tests__/*.ts' --fix && prettier --write 'src/*.ts' 'src/**/*.ts' '__tests__/**/*.ts' '__tests__/*.ts'",
    "docs": "typedoc --readme ./src/README.md --out ./docs/api ./src",
    "start": "LOCAL_TESTING=true ts-node ./src/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tianhaoz95/readable-readme.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "JacksonZ",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^2.2.0",
    "@tensorflow-models/toxicity": "^1.2.2",
    "@tensorflow/tfjs": "^1.7.4",
    "bufferutil": "^4.0.3",
    "canvas": "^2.7.0",
    "marked": "^2.0.1",
    "micromatch": "^4.0.2",
    "mustache": "^4.1.0",
    "nock": "^13.0.11",
    "utf-8-validate": "^5.0.4",
    "write-good": "^1.0.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "jest": "^25.5.4",
    "jest-circus": "^26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typedoc": "^0.20.34",
    "typescript": "^3.9.9",
    "vscode-ripgrep": "^1.11.2"
  },
  "jest": {
    "verbose": true
  }
}
